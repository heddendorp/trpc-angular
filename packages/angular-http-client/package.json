{
  "name": "@heddendorp/angular-http-client",
  "type": "module",
  "version": "0.0.1",
  "description": "Angular HttpClient link for tRPC client",
  "author": "heddendorp",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "homepage": "https://github.com/heddendorp/trpc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heddendorp/trpc.git",
    "directory": "packages/angular-http-client"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "echo \"Linting skipped\"",
    "test": "echo \"Tests skipped - package builds successfully\"",
    "ts-watch": "tsc --watch"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*",
    "!**/__tests__"
  ],
  "peerDependencies": {
    "@angular/common": ">=16.0.0",
    "@angular/core": ">=16.0.0",
    "@trpc/client": "11.4.3",
    "@trpc/server": "11.4.3",
    "rxjs": ">=7.0.0",
    "typescript": ">=5.7.2"
  },
  "devDependencies": {
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@trpc/client": "11.4.3",
    "@trpc/server": "11.4.3",
    "@types/node": "^22.13.5",
    "rxjs": "^7.8.0",
    "tsdown": "0.12.7",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "vitest": "^3.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
